<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UI.appControllers.DeleteController">
   <children>
      <VBox prefHeight="400.0" prefWidth="600.0">
         <children>
            <HBox prefHeight="194.0" prefWidth="600.0">
               <children>
                  <Label prefHeight="202.0" prefWidth="415.0" text="Are you sure that you wanna DELETE this beloved pokemon of yours?">
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin>
                  </Label>
                  <ImageView fitHeight="196.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../pictures/SadDasherGit.png" />
                     </image>
                  </ImageView>
               </children>
            </HBox>
            <HBox prefHeight="206.0" prefWidth="600.0">
               <children>
                  <Button fx:id="confirmDeleteButton" mnemonicParsing="false" onAction="#confirmDeleteButtonAction" text="YES" textFill="#970a0a">
                     <HBox.margin>
                        <Insets bottom="100.0" left="100.0" right="100.0" top="100.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="regretDeleteButton" mnemonicParsing="false" onAction="#regretDeleteButtonAction" text="No, i'm sorry pokey" textFill="#108303">
                     <HBox.margin>
                        <Insets bottom="100.0" left="100.0" right="100.0" top="100.0" />
                     </HBox.margin>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
